@using LibraryManagerMvc.Data.Enums;
@model LibraryManagerMvc.Data.Entities.Book;
@{
	ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>
<hr />

<p class="text-danger">You are about to delete a book from the library. This is action cannot be reversed. Are you sure about this?</p>

<div class="card">
	<div class="col-md-6">
		<form method="post">
			<div class="card-body">
				<h5 class="card-text">@Model.Title</h5>
			</div>
			<div class="card-body">
				<h5 class="card-text">@Model.Author</h5>
			</div>
			<div class="card-body">
				<h5 class="card-text">@Model.Category</h5>
			</div>

			<button type="submit" asp-controller="Books" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="btn btn-danger">Yes, I'm sure</button>
			<a asp-controller="Books" asp-action="List" class="btn btn-secondary">No, Go back</a>
		</form>
	</div>
</div>
